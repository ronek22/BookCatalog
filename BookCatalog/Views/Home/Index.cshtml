@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <img src="~/images/books.jpeg" asp-append-version="true" class="img-responsive" />
    </div>
</div>

<h3>Book Catalog</h3>


<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="books">
                <h2 class="mdl-card__title-text homeLabel">Books</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage books.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a id="BooksButton" class="mdl-button mdl-button--colored" asp-controller="Books" asp-action="Index">
                    View Books
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="authors">
                <h2 class="mdl-card__title-text homeLabel">Authors</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage authors
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a id="AuthorsButton" class="mdl-button mdl-button--colored" asp-controller="Authors" asp-action="Index">
                    View Authors
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="about">
                <h2 class="mdl-card__title-text homeLabel">About</h2>
            </div>
            <div class="mdl-card__supporting-text">
                Check information about our site.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a id="AboutButton" class="mdl-button mdl-button--colored" asp-controller="Home" asp-action="About">
                    View about
                </a>
            </div>
        </div>
    </div>


</div>

